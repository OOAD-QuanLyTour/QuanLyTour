@model IEnumerable<QuanLyTour.Models.NhanVien>

@{
    ViewBag.Title = "QuanLyNhanVien";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QuanLyNhanVien</h2>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.ActionLink("Thông tin", "XemNhanVien", new { nhanvien = item.MaNV }) |
                    @Html.ActionLink("Delete", "XoaNhanVien", new { nhanvien = item.MaNV })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div>
        <p style="font-size: large">
            Không có dữ liệu
        </p>
    </div>
}
<div>
    <p>
        <a href="/QuanLy">Quay về</a>
    </p>
</div>