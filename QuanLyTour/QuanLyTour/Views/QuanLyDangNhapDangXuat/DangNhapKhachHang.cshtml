@model QuanLyTour.Models.NhanVien

@{
    ViewBag.Title = "Đăng nhập";
}


<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <p class="text-danger">@ViewData["loi"]</p>
        <div class="form-group">
            @Html.Label("Tài khoản", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" name="taikhoan" />
                <p class="text-danger">@ViewData["taikhoan"]</p>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" name="matkhau" type="password" />
                <p class="text-danger">@ViewData["matkhau"]</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng nhập" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a href="/">Back to List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
