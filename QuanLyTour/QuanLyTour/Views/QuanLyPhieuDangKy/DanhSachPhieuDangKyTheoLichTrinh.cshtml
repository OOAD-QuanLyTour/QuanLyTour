@model IEnumerable<QuanLyTour.Models.PhieuDangKy>

@{
    /**/

    ViewBag.Title = "DanhSachPhieuDangKyTheoLichTrinh";

    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<h2>DanhSachPhieuDangKyTheoLichTrinh</h2>
@if (Model != null)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LichTrinh_Tour.Tour.TenTour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khach.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngaylap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TinhTrang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LichTrinh_Tour.NgayDi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LichTrinh_Tour.NgayKetthuc)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LichTrinh_Tour.Tour.TenTour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Khach.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngaylap)
                </td>
                <td>
                    @if (item.TinhTrang == null)
                    {
                        <p>Chờ</p>
                    }
                    else if (item.TinhTrang == true)
                    {
                        <p>Hợp lệ</p>
                    }
                    else
                    {
                        <p>Không hợp lệ</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LichTrinh_Tour.NgayDi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LichTrinh_Tour.NgayKetthuc)
                </td>
            </tr>
        }

    </table>

}
else
{
    <div>
        <p>
            Không có dữ liệu
        </p>
    </div>
}
<div>
    <a href="/DanhSachLichTrinh">Quay về</a>
</div>