@model IEnumerable<QuanLyTour.Models.Tour>

@{
    ViewBag.Title = "ThongKeTourYeuThichTheoThang";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    int i = 0;
    List<int> yeuthich = (List<int>)ViewBag.YeuThich;
}
<h2>ThongKeTourYeuThichTheoThang</h2>
<div>
    <form method="get">
        <span>Thời gian</span> <input type="date" name="time" />
        <input type="submit" value="Thống kê" />
    </form>
</div>
@if (Model != null)
{
    

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenTour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaTour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                Yêu thích
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaTour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @yeuthich.ElementAt(i++)
                </td>
            </tr>
        }

    </table>

}
else
{
    <div>
        <p>
            Không có dữ liệu
        </p>
    </div>
}
<div>
    <p>
        <a href="/ThongKe">Quay về</a>
    </p>
</div>